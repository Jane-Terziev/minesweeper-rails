<div class="row">
  <div class="col-3"></div>
  <div class="col-6">
    <% if @board.matrix.present? %>
      <%= render 'grid', board: @board %>
      <% else %>
      <%= turbo_stream_from "grid_#{@board.id}" %>
      <%= turbo_frame_tag "grid_#{@board.id}" do %>
        <div class="d-flex justify-content-center">
          <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      <% end %>
    <% end %>
    <h2>Email: <%= @board.email %></h2>
    <h2>Name: <%= @board.name %></h2>
    <h2>Width: <%= @board.width %></h2>
    <h2>Height: <%= @board.height %></h2>
    <h2>Number of Bombs: <%= @board.bombs %></h2>
    <h2>Generated_at: <%= time_tag @board.created_at %></h2>
  </div>
  <div class="col-3"></div>
</div>