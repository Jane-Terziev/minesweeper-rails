<div class="row">
  <div class="col-1"></div>
  <div class="col-10">
    <% if @board.matrix.present? %>
      <%= render 'grid', board: @board %>
      <% else %>
      <%= turbo_stream_from "grid_#{@board.id}" %>
      <%= turbo_frame_tag "grid_#{@board.id}" do %>
        <div class="d-flex justify-content-center">
          <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      <% end %>
    <% end %>
    <h3>Email: <%= @board.email %></h3>
    <h3>Name: <%= @board.name %></h3>
    <h3>Width: <%= @board.width %></h3>
    <h3>Height: <%= @board.height %></h3>
    <h3>Number of Bombs: <%= @board.bombs %></h3>
    <h3>Generated_at: <%= time_tag @board.created_at %></h3>
    <hr>
    <%= link_to "Back", boards_path, class: 'btn btn-danger btn-lg mb-5' %>
  </div>
</div>