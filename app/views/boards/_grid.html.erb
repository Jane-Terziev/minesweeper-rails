<div class="table-responsive">
  <table class="table table-bordered table-striped">
    <tbody>
    <% board.matrix.each do |row| %>
      <tr>
        <% row.each do |col| %>
          <td style="width: 50px; height: 50px" align="center">
            <% if col == "1" %>
              <%= image_tag "/bomb.png" %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>